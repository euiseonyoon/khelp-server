# PostgreSQL Configuration
# Copy this file to .env and update with your actual values
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_PORT=

# MongoDB Configuration (for CQRS read model)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=
MONGODB_USERNAME=
MONGODB_PASSWORD=

# JWT Configuration
# Generate secure random keys using: openssl rand -base64 32
JWT_ACCESS_SECRET=your-access-secret-key-base64-encoded-at-least-32-bytes
JWT_REFRESH_SECRET=your-refresh-secret-key-base64-encoded-at-least-32-bytes
JWT_ISSUER=khelp-server
JWT_ACCESS_DURATION_MS=3600000        # 1 hour
JWT_REFRESH_DURATION_MS=604800000     # 7 days

# Spring Application
SPRING_PROFILES_ACTIVE=dev
